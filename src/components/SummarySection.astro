---
interface Props {
    title: string;
    text: string;
    image: string;
    imageAlt: string;
    reverse?: boolean;
}

const { title, text, image, imageAlt, reverse = false } = Astro.props;
---

<section class="bg-muted py-20">
    <div class="container max-w-6xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class={reverse ? 'order-2 lg:order-2' : 'order-2 lg:order-1'}>
                <h2 class="text-3xl md:text-4xl font-bold mb-6">{title}</h2>
                <div class="space-y-4 text-lg text-muted-foreground leading-relaxed">
                    <p>{text}</p>
                    <slot />
                </div>
            </div>
            <div class={reverse ? 'order-1 lg:order-1' : 'order-1 lg:order-2'}>
                <div class="relative">
                    <div class="absolute -inset-4 bg-primary/10 rounded-3xl -rotate-2"></div>
                    <img
                        src={image}
                        alt={imageAlt}
                        class="relative rounded-2xl shadow-2xl w-full object-cover aspect-video lg:aspect-square"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
