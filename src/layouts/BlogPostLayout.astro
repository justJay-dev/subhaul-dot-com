---
import BaseLayout from '@/layouts/BaseLayout.astro';

interface Props {
    title: string;
    description?: string;
    publishDate?: string;
    author?: string;
    image?: string;
    category?: string;
    tags?: string[];
}

const {
    title,
    description,
    publishDate,
    author = 'Haul Team',
    image,
    category,
    tags = [],
} = Astro.props;
---

<BaseLayout title={title} description={description}>
    <article class="bg-card text-card-foreground max-w-4xl mx-auto px-4 py-12 md:py-20">
        <div class="mb-8 text-center">
            {
                category && (
                    <span class="inline-block px-3 py-1 rounded-full bg-primary/10 text-primary text-xs font-bold uppercase tracking-wider mb-4">
                        {category}
                    </span>
                )
            }
            <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight mb-6">
                {title}
            </h1>

            <div class="flex items-center justify-center gap-4 text-muted-foreground text-sm">
                <div class="flex items-center gap-2">
                    <div
                        class="w-8 h-8 rounded-full bg-accent flex items-center justify-center text-accent-foreground font-bold"
                    >
                        {author.charAt(0)}
                    </div>
                    <span>{author}</span>
                </div>
                {
                    publishDate && (
                        <>
                            <span>â€¢</span>
                            <time datetime={publishDate}>
                                {new Date(publishDate).toLocaleDateString('en-US', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric',
                                })}
                            </time>
                        </>
                    )
                }
            </div>
        </div>

        {
            image && (
                <div class="mb-12 rounded-2xl overflow-hidden shadow-2xl aspect-video">
                    <img src={image} alt={title} class="w-full h-full object-cover" />
                </div>
            )
        }

        <div
            class="prose prose-lg dark:prose-invert max-w-none prose-headings:text-card-foreground prose-p:text-card-foreground prose-li:text-card-foreground prose-strong:text-card-foreground prose-blockquote:text-card-foreground prose-blockquote:border-primary prose-blockquote:italic prose-headings:font-bold prose-a:text-primary hover:prose-a:text-primary/80 prose-img:rounded-xl"
        >
            <slot />
        </div>

        {
            tags.length > 0 && (
                <div class="mt-12 flex flex-wrap gap-2">
                    {tags.map((tag) => (
                        <span class="px-3 py-1 rounded-md bg-muted text-muted-foreground text-xs font-medium hover:bg-primary/10 hover:text-primary transition-colors cursor-default">
                            #{tag.toLocaleLowerCase()}
                        </span>
                    ))}
                </div>
            )
        }

        <div class="mt-16 pt-8 border-t border-border">
            <a
                href="/blog"
                class="inline-flex items-center gap-2 text-primary font-semibold hover:underline"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"><path d="m15 18-6-6 6-6"></path></svg
                >
                Back to Blog
            </a>
        </div>
    </article>
</BaseLayout>
