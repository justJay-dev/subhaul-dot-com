---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout
    title="Booking Successful - Haul"
    description="Thank you for booking with Haul. Your payment information has been securely captured."
    keywords="booking confirmation, payment success, moving confirmation"
>
    <div class="mx-auto flex items-center justify-center px-4 py-8 md:px-8 md:py-12">
        <div class="max-w-3xl w-full text-center space-y-6 md:space-y-8">
            <div
                class="bg-card dark:bg-card border rounded-lg shadow-lg p-8 md:p-12"
                id="success-content"
                style="display: none;"
            >
                <div class="mb-6">
                    <svg
                        class="text-emerald-500 mx-auto mb-6 w-16 h-16 md:w-20 md:h-20"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <h1
                        class="font-bold dark:text-primary mb-4 underline decoration-primary/30 text-3xl md:text-4xl"
                    >
                        Thank you!
                    </h1>
                    <p class="text-muted-foreground mb-6 text-lg md:text-xl">
                        We appreciate you trusting Haul for your move.
                    </p>
                </div>

                <div class="space-y-4 text-left">
                    <div class="bg-muted/50 rounded-lg p-4">
                        <p class="text-card-foreground">
                            Your payment information has been securely captured, and we'll process
                            your deposit at a future date as detailed in your confirmation.
                        </p>
                    </div>

                    <div
                        class="bg-emerald-50 dark:bg-emerald-950/30 border border-emerald-200 dark:border-emerald-800 rounded-lg p-4"
                    >
                        <p class="text-card-foreground">
                            <strong class="dark:text-primary">Keep an eye on your inbox</strong
                            >â€”next steps and important details about your move will be emailed to
                            you shortly at{' '}
                            <span
                                class="text-muted-foreground hover:text-primary"
                                id="customer-email"></span>
                        </p>
                    </div>

                    <div class="bg-muted/50 rounded-lg p-4">
                        <p class="text-card-foreground">
                            If you have any questions in the meantime, feel free to reach out to our
                            customer service team. We're here to help!
                        </p>
                    </div>
                </div>
            </div>

            <div id="loading-content" class="text-center">
                <p class="text-muted-foreground">Loading...</p>
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    const apiUrl = import.meta.env.PUBLIC_API_URL;
    // Get session_id from URL parameters
    const queryString = window.location.search;
    const urlParams = new URLSearchParams(queryString);
    const sessionId = urlParams.get('session_id');

    const loadingContent = document.getElementById('loading-content');
    const successContent = document.getElementById('success-content');
    const customerEmailElement = document.getElementById('customer-email');

    if (sessionId) {
        // Fetch checkout session data
        fetch(`${apiUrl}/payment/checkout-session/${sessionId}`)
            .then((res) => res.json())
            .then((data) => {
                if (import.meta.env.PUBLIC_DEBUG_MODE === 'true') {
                    console.log('Checkout session data:', data);
                }

                const status = data.data.status;
                const customerEmail = data.data.customer_details.email;

                if (status === 'open') {
                    // Redirect to checkout if still open
                    window.location.href = '/checkout';
                } else if (status === 'complete') {
                    // Show success content
                    if (customerEmailElement) {
                        customerEmailElement.textContent = customerEmail;
                    }
                    if (loadingContent) {
                        loadingContent.style.display = 'none';
                    }
                    if (successContent) {
                        successContent.style.display = 'block';
                    }
                }
            })
            .catch((error) => {
                console.error('Error fetching checkout session:', error);
                if (loadingContent) {
                    loadingContent.innerHTML =
                        '<p class="text-destructive">Unable to load booking information. Please contact support.</p>';
                }
            });
    } else {
        // No session_id provided
        if (loadingContent) {
            loadingContent.innerHTML =
                '<p class="text-destructive">Invalid booking session. Please contact support.</p>';
        }
    }
</script>
