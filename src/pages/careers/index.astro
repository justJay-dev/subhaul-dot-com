---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PageHero from '@/components/PageHero.astro';
import CTABanner from '@/components/CTABanner.astro';

const jobs = [
    {
        id: 'moving-coordinator',
        title: 'Moving Coordinator',
        department: 'Operations',
        location: 'Remote / Austin, TX',
        type: 'Full-time',
    },
    {
        id: 'customer-service-rep',
        title: 'Customer Service Representative',
        department: 'Support',
        location: 'Remote',
        type: 'Full-time',
    },
    {
        id: 'lead-driver',
        title: 'Lead Driver & Mover',
        department: 'Logistics',
        location: 'Birmingham, AL',
        type: 'Full-time',
    },
];
---

<BaseLayout title="Careers | HaulCo">
    <PageHero
        title="Join the"
        highlightedText="Future of Moving"
        description="We're on a mission to make moving stress-free for everyone. Come help us build the most customer-centric moving platform in the world."
        align="center"
        maxWidth="max-w-6xl"
    />

    <section>
        <div class="container">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
                <div class="bg-card p-8 rounded-2xl border border-border shadow-sm text-center">
                    <div
                        class="w-12 h-12 bg-primary/10 text-primary rounded-full flex items-center justify-center mx-auto mb-6"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"></path></svg
                        >
                    </div>
                    <h3 class="text-xl font-bold mb-2">Trust & Safety</h3>
                    <p class="text-muted-foreground text-sm">
                        We prioritize the safety of our team and our customers above all else.
                    </p>
                </div>
                <div class="bg-card p-8 rounded-2xl border border-border shadow-sm text-center">
                    <div
                        class="w-12 h-12 bg-primary/10 text-primary rounded-full flex items-center justify-center mx-auto mb-6"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path d="M17 6.1H3"></path><path d="M21 12.1H3"></path><path
                                d="M15.1 18.1H3"></path></svg
                        >
                    </div>
                    <h3 class="text-xl font-bold mb-2">Innovation</h3>
                    <p class="text-muted-foreground text-sm">
                        We're constantly finding new ways to use technology to simplify logistics.
                    </p>
                </div>
                <div class="bg-card p-8 rounded-2xl border border-border shadow-sm text-center">
                    <div
                        class="w-12 h-12 bg-primary/10 text-primary rounded-full flex items-center justify-center mx-auto mb-6"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle
                                cx="9"
                                cy="7"
                                r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path
                                d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg
                        >
                    </div>
                    <h3 class="text-xl font-bold mb-2">Community</h3>
                    <p class="text-muted-foreground text-sm">
                        We're a diverse team of problem-solvers who support each other every day.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-16 md:py-24 bg-muted">
        <div class="container max-w-6xl">
            <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-12">
                <div>
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">Open Positions</h2>
                    <p class="text-muted-foreground">Find your next challenge at HaulCo.</p>
                </div>
                <div class="flex gap-4">
                    <select
                        class="bg-background border border-border rounded-md px-4 py-2 text-sm focus:ring-2 focus:ring-primary outline-none"
                    >
                        <option>All Departments</option>
                        <option>Operations</option>
                        <option>Support</option>
                        <option>Logistics</option>
                    </select>
                </div>
            </div>

            <div class="space-y-4">
                {
                    jobs.map((job) => (
                        <a
                            href={`/careers/${job.id}`}
                            class="group block p-6 bg-card border border-border rounded-xl hover:border-primary hover:shadow-md transition-all"
                        >
                            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                <div>
                                    <h3 class="text-xl font-bold group-hover:text-primary transition-colors mb-1">
                                        {job.title}
                                    </h3>
                                    <div class="flex flex-wrap gap-x-4 gap-y-1 text-sm text-muted-foreground">
                                        <span class="flex items-center gap-1">
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="14"
                                                height="14"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <>
                                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                                                    <circle cx="12" cy="10" r="3" />
                                                </>
                                            </svg>
                                            {job.location}
                                        </span>
                                        <span class="flex items-center gap-1">
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="14"
                                                height="14"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <>
                                                    <rect
                                                        width="20"
                                                        height="14"
                                                        x="2"
                                                        y="7"
                                                        rx="2"
                                                        ry="2"
                                                    />
                                                    <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" />
                                                </>
                                            </svg>
                                            {job.department}
                                        </span>
                                        <span class="flex items-center gap-1">
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="14"
                                                height="14"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <>
                                                    <circle cx="12" cy="12" r="10" />
                                                    <polyline points="12 6 12 12 16 14" />
                                                </>
                                            </svg>
                                            {job.type}
                                        </span>
                                    </div>
                                </div>
                                <div class="flex items-center text-primary font-bold text-sm">
                                    View Details
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="18"
                                        height="18"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="3"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        class="ml-1 group-hover:translate-x-1 transition-transform"
                                    >
                                        <path d="m9 18 6-6-6-6" />
                                    </svg>
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>

    <CTABanner
        title="Don't see the right fit?"
        description="We're always looking for talented people to join our team. Send us your resume and we'll keep you in mind for future openings."
        primaryButtonText="Send General Application"
        primaryButtonHref="mailto:careers@haulco.com"
        className="pt-0"
    />
</BaseLayout>
