---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PageHero from '@/components/PageHero.astro';
import CTABanner from '@/components/CTABanner.astro';

const partnerPrograms = [
    {
        title: 'Carrier Network',
        description:
            'Join our network of vetted, professional carriers and grow your moving business with HaulCo.',
        href: '/partners/carriers',
        icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>',
    },
    {
        title: 'Real Estate Partners',
        description:
            'Provide your clients with a seamless moving experience and earn rewards for every referral.',
        href: '/partners/realestate-partners',
        icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>',
    },
    {
        title: 'Affiliate Program',
        description:
            'Partner with the fastest-growing moving platform and earn commissions on every successful booking.',
        href: '/partners/affiliates',
        icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><polyline points="16 11 18 13 22 9"/></svg>',
    },
    {
        title: 'Property Managers',
        description:
            'Streamline the move-in/move-out process for your tenants with our integrated logistics tools.',
        href: '/partners/property-managers',
        icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21h18"/><path d="M9 8h1"/><path d="M9 12h1"/><path d="M9 16h1"/><path d="M14 8h1"/><path d="M14 12h1"/><path d="M14 16h1"/><path d="M5 21V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16"/></svg>',
    },
    {
        title: 'Mortgage Lenders',
        description:
            'Add value to your mortgage services by offering a stress-free moving solution to your borrowers.',
        href: '/partners/mortgage-lenders',
        icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>',
    },
    {
        title: 'Referral Program',
        description:
            'Refer friends and family to HaulCo and earn rewards when they complete their move.',
        href: '/partners/referral-program',
        icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>',
    },
    {
        title: 'Advertise With Us',
        description:
            'Reach high-intent customers during their move by advertising on the HaulCo platform.',
        href: '/partners/advertise-with-us',
        icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="M8 11h8"/><path d="M8 15h8"/></svg>',
    },
];
---

<BaseLayout title="Partner Programs | HaulCo">
    <PageHero
        title="Grow with"
        highlightedText="HaulCo"
        description="Join our ecosystem of partners and help us redefine the moving industry. We offer specialized programs for carriers, real estate professionals, and more."
        maxWidth="max-w-6xl"
    />

    <section class="pb-24">
        <div class="container max-w-6xl">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    partnerPrograms.map((program) => (
                        <a
                            href={program.href}
                            class="group bg-card border border-border rounded-3xl p-8 hover:shadow-xl transition-all duration-300 flex flex-col"
                        >
                            <div class="w-12 h-12 bg-primary/10 text-primary rounded-xl flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-primary-foreground transition-colors duration-300">
                                <Fragment set:html={program.icon} />
                            </div>
                            <h3 class="text-2xl font-bold mb-3 group-hover:text-primary transition-colors">
                                {program.title}
                            </h3>
                            <p class="text-muted-foreground leading-relaxed mb-6 flex-1">
                                {program.description}
                            </p>
                            <div class="pt-4 border-t border-border flex items-center text-primary font-bold text-sm">
                                Learn More
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="3"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="ml-1 group-hover:translate-x-1 transition-transform"
                                >
                                    <path d="m9 18 6-6-6-6" />
                                </svg>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>

    <CTABanner
        title="Interested in a custom partnership?"
        description="We're always looking for new ways to collaborate. Reach out to our partnership team to discuss how we can work together."
        primaryButtonText="Contact Partnerships"
        primaryButtonHref="/contact-us"
        className="pt-0"
    />
</BaseLayout>
