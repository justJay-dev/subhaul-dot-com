---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PageHero from '@/components/PageHero.astro';
import TestimonialCard from '@/components/testimonials/TestimonialCard.astro';
import CTABanner from '@/components/CTABanner.astro';
import { testimonials } from '@/lib/data.ts';
---

<BaseLayout title="Customer Testimonials | HaulCo">
    <PageHero
        title="What Our"
        highlightedText="Customers Say"
        description="Don't just take our word for it. We've helped thousands of families and businesses move across the country with ease."
        maxWidth="max-w-6xl"
    />

    <section class="pb-24">
        <div class="container max-w-6xl">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {testimonials.map((testimonial) => <TestimonialCard {...testimonial} />)}
            </div>
        </div>
    </section>

    <CTABanner
        title="Ready for your best move yet?"
        description="Join thousands of happy customers who chose HaulCo for a stress-free moving experience. Get your instant, AI-powered quote in minutes."
        primaryButtonText="Book Your Move"
        primaryButtonHref="/book-a-move"
        className="pt-0"
    />
</BaseLayout>
